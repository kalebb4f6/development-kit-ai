#!/usr/bin/env bash
#
# kb-ai installer script
# Usage: ./scripts/kb-ai install [--global]
#

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"
TOOLS_DIR="$PROJECT_ROOT/tools/kb-ai"

# Installation directories
LOCAL_BIN_DIR="$PROJECT_ROOT/bin"
GLOBAL_BIN_DIR="$HOME/.local/bin"

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

log_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[OK]${NC} $1"
}

log_warn() {
    echo -e "${YELLOW}[WARN]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

install() {
    local global_install=false
    local bin_dir="$LOCAL_BIN_DIR"

    # Parse arguments
    for arg in "$@"; do
        case "$arg" in
            --global|-g)
                global_install=true
                bin_dir="$GLOBAL_BIN_DIR"
                ;;
        esac
    done

    echo ""
    echo "========================================="
    echo "       kb-ai Installer"
    echo "========================================="
    echo ""

    if [[ "$global_install" == true ]]; then
        log_info "Installing globally to $bin_dir"
    else
        log_info "Installing locally to $bin_dir"
    fi
    echo ""

    # Ensure bin directory exists
    mkdir -p "$bin_dir"

    # Check if Go is available
    if command -v go &> /dev/null; then
        log_info "Go found, building from source..."
        install_go "$bin_dir"
    else
        log_warn "Go not found, using bash fallback..."
        install_bash "$bin_dir"
    fi

    echo ""
    log_success "Installation complete!"
    echo ""

    # Check if global bin is in PATH
    if [[ "$global_install" == true ]]; then
        if [[ ":$PATH:" != *":$GLOBAL_BIN_DIR:"* ]]; then
            echo "========================================="
            echo "       Configure PATH"
            echo "========================================="
            echo ""
            log_warn "$GLOBAL_BIN_DIR is not in your PATH"
            echo ""
            echo "Add this line to your ~/.bashrc or ~/.zshrc:"
            echo ""
            echo -e "  ${CYAN}export PATH=\"\$PATH:$GLOBAL_BIN_DIR\"${NC}"
            echo ""
            echo "Then reload your shell:"
            echo ""
            echo -e "  ${CYAN}source ~/.bashrc${NC}  # or source ~/.zshrc"
            echo ""
        else
            log_success "$GLOBAL_BIN_DIR is already in your PATH"
        fi
    fi

    echo "========================================="
    echo "       Usage"
    echo "========================================="
    echo ""
    if [[ "$global_install" == true ]]; then
        echo "Now you can use kb-ai in any project:"
        echo ""
        echo "  cd /path/to/your/project"
        echo "  kb-ai setup      # Setup Ollama and models"
        echo "  kb-ai init-kit   # Initialize AI kit in project"
        echo "  kb-ai feature run --title \"Feature\" --input feature.txt"
    else
        echo "1. Run setup to configure Ollama:"
        echo "   ./bin/kb-ai setup"
        echo ""
        echo "2. Initialize the AI kit:"
        echo "   ./bin/kb-ai init-kit"
        echo ""
        echo "3. Run a feature analysis:"
        echo "   ./bin/kb-ai feature run --title \"My Feature\" --input feature.txt"
        echo ""
        echo "To install globally, run:"
        echo "   ./scripts/kb-ai install --global"
    fi
    echo ""
}

install_go() {
    local bin_dir="$1"
    cd "$TOOLS_DIR"

    # Check if go.mod exists
    if [[ ! -f "go.mod" ]]; then
        log_info "Initializing Go module..."
        go mod init kb-ai
    fi

    log_info "Building kb-ai..."
    go build -o "$bin_dir/kb-ai" .
    chmod +x "$bin_dir/kb-ai"
    log_success "Built $bin_dir/kb-ai"
}

install_bash() {
    local bin_dir="$1"
    log_info "Installing bash version..."

    # Copy bash script to bin
    cp "$TOOLS_DIR/kb-ai.sh" "$bin_dir/kb-ai"
    chmod +x "$bin_dir/kb-ai"
    log_success "Installed $bin_dir/kb-ai (bash version)"
}

uninstall() {
    echo ""
    echo "========================================="
    echo "       kb-ai Uninstaller"
    echo "========================================="
    echo ""

    local removed=false

    if [[ -f "$GLOBAL_BIN_DIR/kb-ai" ]]; then
        rm "$GLOBAL_BIN_DIR/kb-ai"
        log_success "Removed $GLOBAL_BIN_DIR/kb-ai"
        removed=true
    fi

    if [[ -f "$LOCAL_BIN_DIR/kb-ai" ]]; then
        rm "$LOCAL_BIN_DIR/kb-ai"
        log_success "Removed $LOCAL_BIN_DIR/kb-ai"
        removed=true
    fi

    if [[ "$removed" == false ]]; then
        log_warn "kb-ai not found in any location"
    else
        echo ""
        log_success "Uninstall complete!"
    fi
    echo ""
}

show_help() {
    echo "kb-ai Installer"
    echo ""
    echo "Usage: $0 <command> [options]"
    echo ""
    echo "Commands:"
    echo "  install [--global]   Install kb-ai"
    echo "  uninstall            Remove kb-ai from all locations"
    echo ""
    echo "Options:"
    echo "  --global, -g         Install to ~/.local/bin (available in any project)"
    echo ""
    echo "Examples:"
    echo "  $0 install           # Install locally to ./bin/"
    echo "  $0 install --global  # Install globally to ~/.local/bin/"
    echo "  $0 uninstall         # Remove kb-ai"
    echo ""
}

# Main
case "${1:-}" in
    install)
        shift
        install "$@"
        ;;
    uninstall)
        uninstall
        ;;
    --help|-h|help)
        show_help
        ;;
    *)
        show_help
        exit 1
        ;;
esac
